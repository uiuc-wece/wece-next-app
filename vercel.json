{
  "version": 2,
  "github": {
    "enabled": false
  },
  "build": {
    "env": {
      "API_URL": "@API_URL",
      "MONGODB_URL": "@MONGODB_URL",
      "MAILERLITE_API_KEY": "@MAILERLITE_API_KEY",
      "MAILERLITE_GROUP_ID": "@MAILERLITE_GROUP_ID"
    }
  },
  "env": {
    "API_URL": "@API_URL",
    "MONGODB_URL": "@MONGODB_URL",
    "MAILERLITE_API_KEY": "@MAILERLITE_API_KEY",
    "MAILERLITE_GROUP_ID": "@MAILERLITE_GROUP_ID"
  },
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/client/$1"
    }
  ]
}
